#!/bin/bash
if [[ $# -gt 3 ]]
then
echo "Za duzo argumentow"
exit
fi

if [[ $# -lt 3 ]]
then
read choise
case $choise in
"a") exit ;;
"b") touch plik ;;
"c") cat $1 $2 $3 | tee "plik.txt" ;;
*) echo "Wybierz" ;;
esac
else
cat $1 $2 $3 >> OUTSTREAM.txt
fi
